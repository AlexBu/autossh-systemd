[Unit]
Description=Keeps a tunnel to %I
After=network-online.target ssh.service

[Service]
Environment="LOCAL_ADDR=localhost"
EnvironmentFile=/etc/default/secure-tunnel@%i
ExecStart=/usr/bin/ssh -NT -o ServerAliveInterval=60 -o ExitOnForwardFailure=yes -R ${LOCAL_ADDR}:${LOCAL_PORT}:localhost:22 -l ${REMOTE_USER} -p ${REMOTE_PORT} -i /etc/default/%i ${REMOTE_SERVER}
RestartSec=5
Restart=always

[Install]
WantedBy=multi-user.target
