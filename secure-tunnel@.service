[Unit]
Description=Keeps a tunnel to %I
After=network-online.target ssh.service

[Service]
Environment="LOCAL_ADDR=localhost"
EnvironmentFile=/etc/default/secure-tunnel@%i
ExecStart=/usr/bin/ssh -NT -o ServerAliveInterval=60 -o ExitOnForwardFailure=yes -F '/home/alex/.ssh/config' -R ${LOCAL_ADDR}:${LOCAL_PORT}:localhost:22 ${TARGET}
RestartSec=5
Restart=always

[Install]
WantedBy=multi-user.target
